<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".orderFuel"
    android:background="@drawable/fuelbck">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/login_car">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/logintext"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:text="Order Fuel"
                android:textColor="@color/purple"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fueltype"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/baseline_battery_full_24"
                android:hint="Enter the type of Fuel "
                android:inputType="text" />

            <EditText
                android:id="@+id/fuelqty"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/baseline_123_24"
                android:hint="Enter the fuel Quantity in litter "
                android:inputType="number" />

            <EditText
                android:id="@+id/phn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/baseline_call_24"
                android:hint="Enter the your Phone number "
                android:inputType="phone" />

            <EditText
                android:id="@+id/address"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/baseline_info_24"
                android:hint="Enter the your address "
                android:inputType="text" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/baseline_price_check_24"
                android:enabled="false"
                android:focusable="false"
                android:hint="Total Amount "
                android:inputType="text" />

            <Button
                android:id="@+id/cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Calculate Total"
                android:drawableTint="@color/purple"/>

            <Button
                android:id="@+id/odr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="175dp"
                android:drawableTint="@color/purple"

                android:text="Order" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>